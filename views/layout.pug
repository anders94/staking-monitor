doctype html
html(lang='en', data-bs-theme='dark')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')

    title Staking Monitor

    link(href='/css/lib/bootstrap.min.css', rel='stylesheet')
    link(href='/css/site.css', rel='stylesheet')
    block stylesheets

    script(src='/js/lib/bootstrap.bundle.min.js')
    script(src='/js/lib/jquery.min.js')
    block javascripts

  body
    nav.navbar.navbar-expand-md.navbar-dark.fixed-top.bg-dark
      .container-fluid
        a.navbar-brand(href="/") Staking Monitor
        button.navbar-toggler(type="button", data-bs-toggle="collapse", data-bs-target="#navbarCollapse", aria-controls="navbarCollapse", aria-expanded="false", aria-label="Toggle navigation")
          span.navbar-toggler-icon
        .collapse.navbar-collapse#navbarCollapse
          ul.navbar-nav.me-auto.mb-2.mb-md-0
            li.nav-item
              a.nav-link.active(aria-current="page", href="/") Home
            li.nav-item
              a.nav-link(href="/withdrawals") Withdrawals
          form.d-flex(role="search", action="/search")
            input.form-control.me-2(type="search", placeholder="Search", aria-label="Search")
            button.btn.btn-outline-success(type="submit") Search

    block content
