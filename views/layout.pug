doctype html
html(lang='en', data-bs-theme='dark')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')

    title Staking Monitor

    link(href='/css/lib/bootstrap.min.css', rel='stylesheet')
    link(href='/css/site.css', rel='stylesheet')
    block stylesheets

    script(src='/js/lib/bootstrap.bundle.min.js')
    script(src='/js/lib/jquery.min.js')
    block javascripts

  body
    nav.navbar.navbar-expand-md.navbar-dark.fixed-top.bg-dark
      .container-fluid
        a.navbar-brand(href='/') Staking Monitor
        button.navbar-toggler(type='button', data-bs-toggle='collapse', data-bs-target='#navbarCollapse', aria-controls='navbarCollapse', aria-expanded='false', aria-label='Toggle navigation')
          span.navbar-toggler-icon
        .collapse.navbar-collapse#navbarCollapse
          ul.navbar-nav.me-auto.mb-2.mb-md-0
            li.nav-item
              a(class='nav-link' + (page == 'index' ? ' active' : ''), aria-current='page', href='/') Home
            li.nav-item
              a(class='nav-link' + (page == 'withdrawals' ? ' active' : ''), href='/withdrawals') Withdrawals
          form.d-flex(role='search', action='/search', method='POST')
            input.form-control.me-2(name='query', type='search', placeholder='Validator Number', aria-label='Search')
            button.btn.btn-outline-success(type='submit') Search

    block content

    .container
      footer.py-3.my-4
        ul.nav.justify-content-center.border-bottom.pb-3.mb-3
          li.nav-item
            a.nav-link.px-2.text-body-secondary(href='/') Home
          li.nav-item
            a.nav-link.px-2.text-body-secondary(href='/withdrawals') Withdrawals
        p.text-center.text-body-secondary &copy; #{new Date().getFullYear()} Staking Monitor
