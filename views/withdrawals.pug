extends layout

block javascripts

block content
  - let total = 0;
  - const usdFormatter = new Intl.NumberFormat('en-US', { style: 'currency', currency: 'USD', minimumFractionDigits: 2, maximumFractionDigits: 2 });
  .container
    .card.mt-4
      .card-header
        h2 Withdrawals
        p Date range picker should go here.
      .card-body
        table.table
          thead
            tr
              th Date
              th.d-none.d-md-block Epoch
              th Validator
              th.d-none.d-lg-block Address
              th ETH Amount
              th USD Value
          tbody
            each withdrawal in withdrawals
              - total += Number(withdrawal.usd_value)
              tr
                td= withdrawal.stamp.toLocaleDateString('en-us', {year: 'numeric', month: 'numeric', day: 'numeric', hour: 'numeric', minute: 'numeric', second: 'numeric'})
                td.d-none.d-md-block= withdrawal.epoch_id
                td
                  a(href='/validator/'+withdrawal.validator_id) #{withdrawal.validator_id}
                td.d-none.d-lg-block= withdrawal.address
                td= Number(withdrawal.amount)
                td $#{Number(withdrawal.usd_value).toFixed(2)}
      .card-footer
        h4.text-end Total: #{usdFormatter.format(total)}
